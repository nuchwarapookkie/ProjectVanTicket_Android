<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF6F4"
    android:orientation="vertical"
    tools:context=".admin_time">
    <!--<android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">-->
            <EditText
                android:id="@+id/edt_calendar"
                android:hint="วว/ดด/ปป"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_edt2"
                android:layout_width="150dp"
                android:editable="false"
                android:layout_height="wrap_content" />
           <LinearLayout
               android:gravity="center"
               android:orientation="horizontal"
               android:layout_marginTop="15dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <Spinner
                   android:id="@+id/time_start_spin"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:text="   ถึง   "
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <Spinner
                   android:id="@+id/time_end_spin"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>
            <Button
                android:id="@+id/save_way_time"
                android:background="@drawable/custom_btn2"
                android:text="บันทึก"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycle_view_time"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <!--</LinearLayout>
    </android.support.v4.widget.NestedScrollView>-->
</LinearLayout>