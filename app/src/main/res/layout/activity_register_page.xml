<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/office"
    tools:context=".RegisterPage">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_group_add_black_24dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <EditText
                android:id="@+id/Name_regis"
                android:padding="8dp"
                android:hint="ชื่อ-นามสกุล"
                android:background="@drawable/custom_edt"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/email_regis"
                android:padding="8dp"
                android:hint="E-mail"
                android:background="@drawable/custom_edt"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/card_id_regis"
                android:padding="8dp"
                android:hint="รหัสบัตรประชาชน"
                android:background="@drawable/custom_edt"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/address_regis"
                android:padding="8dp"
                android:hint="ที่อยู่"
                android:background="@drawable/custom_edt"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/phone_regis"
                android:padding="8dp"
                android:hint="เบอร์โทรศัพท์ติดต่อ"
                android:background="@drawable/custom_edt"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/pass_regis"
                android:padding="8dp"
                android:hint="Pass"
                android:inputType="textPassword"
                android:background="@drawable/custom_edt"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/re_pass_regis"
                android:padding="8dp"
                android:hint="Re-Pass"
                android:inputType="textPassword"
                android:background="@drawable/custom_edt"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_regis_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_btn"
                android:text="สมัครสมาชิก" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>